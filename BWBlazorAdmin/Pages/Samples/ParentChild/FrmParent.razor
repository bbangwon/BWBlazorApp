@page "/Samples/ParentChild/FrmParent"
@inject IJSRuntime JS

<h3>FrmParent</h3>

<input type="button" value="서버에서 호출"
       @onclick="ParentCall" />

<hr />

<FrmChild 
    FromParent="1234"
    OnParentCall="ParentCall"
    PageIndexChanged="PageIndexChanged">
</FrmChild>



@code {
    void ParentCall()
    {
        JS.InvokeAsync<object>("alert", "호출됨");
    }

    void PageIndexChanged(int pageIndex)
    {
        JS.InvokeAsync<object>("alert", $"{pageIndex}인덱스 넘어옴");
    }
}
